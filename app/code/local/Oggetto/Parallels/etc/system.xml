<config>
    <tabs>
        <parallels translate="label" module="parallels">
            <label>Parallels</label>
            <sort_order>1000</sort_order>
        </parallels>
    </tabs>
    <sections>
        <parallels translate="label" module="parallels">
            <class>separator-top</class>
            <label>Parallels Setup</label>
            <tab>parallels</tab>
            <frontend_type>text</frontend_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <driver translate="label">
                            <label>Parallels Driver</label>
                            <frontend_type>select</frontend_type>
                            <source_model>parallels/driver_systemSource</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>-</show_in_store>
                        </driver>
                    </fields>
                </general>
            </groups>
        </parallels>
    </sections>
</config>
